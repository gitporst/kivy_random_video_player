#:kivy 1.11.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

MyScreenManager:
    transition: FadeTransition()
    MenuScreen:
    VideoScreen:

<MenuScreen>
    name: 'menu'
    GridLayout:
        name: "menu"
        cols: 1
        Button:
            id: btnPlay
            text: "Play"
            on_release: app.root.current = 'video'

        Button:
            id: btnExit
            text: "Exit"
            on_press: app.stop()


<VideoScreen>:
    name: 'video'
    Button:
        id: btnBack
        text: "Back"
        on_release: app.root.current = 'menu'


<Button>:
    height: '100sp'
    size_hint_y: None