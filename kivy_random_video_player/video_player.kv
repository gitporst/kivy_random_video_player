#:kivy 1.11.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

MyScreenManager:
    transition: FadeTransition()
    MenuScreen:
    VideoScreen:

<Button>:
    height: '50sp'
    size_hint_y: None

<Player>:
    source: 'data/resources/01_mit_dir_ist_alles_viel_schoener.mp4'
    state: 'play'

<MenuScreen>
    name: 'menu'
    GridLayout:
        name: "menu"
        cols: 1
        Button:
            id: btnPlay
            text: "Play"
            on_release: app.root.current = 'video'

        Button:
            id: btnExit
            text: "Exit"
            on_press: app.stop()


<VideoScreen>:
    name: 'video'
    GridLayout:
        name: "menu"
        cols: 1
        Button:
            id: btnBack
            text: "Back"
            on_release: app.root.current = 'menu'
        Player:
            id: vidPlayer
